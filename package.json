{
  "name": "dexter",
  "version": "0.1.7-rc.2",
  "description": "Assistente local modular com Electron + IA local",
  "main": "dist/main/main.js",
  "author": {
    "name": "Dexter Team",
    "email": "contato@dexter.local"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsup --watch",
    "dev:electron": "wait-on tcp:5173 file:dist/main/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 nodemon --watch dist/main --ext js --exec \"electron .\"",
    "clean": "rimraf dist release",
    "build": "npm run clean && npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "npm run build && playwright test",
    "assets:prepare-ui": "node scripts/prepare-ui-assets.mjs",
    "update:pilot:verify": "node scripts/update-pilot-verify.mjs",
    "update:rollout:preset": "node scripts/update-rollout-presets.mjs",
    "coverage:check": "npm run test:coverage",
    "check": "npm run typecheck && npm run test",
    "quality:ci": "npm run typecheck && npm run coverage:check",
    "ci": "npm run check && npm run test:e2e",
    "pack": "npm run build && electron-builder --linux --dir",
    "dist": "npm run build && electron-builder --linux --publish never"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.9",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.dexter.agent",
    "productName": "Dexter",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!assets/helpers/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/helpers/linux/dexter-runtime-helper.sh",
        "to": "helpers/linux/dexter-runtime-helper.sh"
      }
    ],
    "linux": {
      "icon": "assets/icons/linux",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "Dexter Team <contato@dexter.local>"
    },
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0",
        "libasound2t64 (>= 1.0.0) | libasound2 (>= 1.0.0)"
      ]
    }
  }
}
